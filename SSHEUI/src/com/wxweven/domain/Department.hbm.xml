<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.wxweven.domain">

	<class name="Department" table="wxw_department">
		<id name="id">
			<generator class="assigned" />
		</id>
		<property name="name" />
		<property name="address" />
		<property name="phoneNumber" />
		<property name="email" />
		<property name="deptState" />
		<property name="description" />

		<!-- users属性，本类与User的一对多 -->
		<set name="users" inverse="true">
			<key column="departmentId" />
			<one-to-many class="User" />
		</set>

		<!-- parent属性，本类与Department（上级）的多对一 -->
		<many-to-one name="parent" class="Department" column="parentId" cascade="save-update" />


		<!-- children属性，本类与Department（下级）的一对多 
			order-by属性：指定的是sql的orderby子句内容 
		-->
		<set name="children" inverse="true" order-by="id ASC" lazy="true" cascade="all">
			<key column="parentId" />
			<one-to-many class="Department" />
		</set>
		
		<!-- sysMenus属性，本类与SysMenu的多对多 -->
		<set name="sysMenus" table="wxw_menu_dept">
			<key column="deptId"></key>
			<many-to-many class="SysMenu" column="menuId"></many-to-many>
		</set>

	</class>

</hibernate-mapping>
